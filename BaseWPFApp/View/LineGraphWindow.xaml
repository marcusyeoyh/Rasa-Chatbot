<Window x:Class="BaseWPFApp.View.LineGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Line Graph Window" Height="450" Width="800">
    <Grid>
        <lvc:CartesianChart x:Name="chart">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Title="Quantity" Values="{Binding ChartData}" DataLabels="True" LineSmoothness="0.3" />
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Transaction Date" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Quantity" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Window>
